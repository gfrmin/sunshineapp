<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="location"
        android:title="@string/pref_location_title"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="tempunits"
        android:title="@string/pref_tempunits_title"
        android:entries="@array/pref_tempunits_entries"
        android:entryValues="@array/pref_tempunits_values"
        android:defaultValue="@string/pref_tempunits_default" />
    
</PreferenceScreen>